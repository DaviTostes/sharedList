{
  "compilerOptions": {
    "target": "es2016",                          
    "module": "commonjs",                          
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",                         
    "strict": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
